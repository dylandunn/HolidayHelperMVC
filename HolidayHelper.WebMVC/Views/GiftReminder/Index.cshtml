@model IEnumerable<HolidayHelper.Models.GiftReminderModels.GiftReminderListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
    <div class="alert alert-success fade in" role="alert">
    </div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Recipient.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiftIdeas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiftNeededBy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GiftReminderId)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Recipient.Name)
        </td>
        <td>
            @foreach (var giftidea in item.GiftIdeas)
                {
                    <p>@giftidea.Product</p>@(",")
                }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiftNeededBy)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.GiftReminderId }) |
            @Html.ActionLink("Details", "Details", new {  id=item.GiftReminderId }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.GiftReminderId })
        </td>
    </tr>
}

</table>
